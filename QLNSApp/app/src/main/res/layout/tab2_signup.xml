<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_hoten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/hoten"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Họ tên"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_emaildtsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/emaildtsignup"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Email/Số điện thoại"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_matkhausignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/matkhausignup"
            android:inputType="textPassword"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Mật khẩu"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnDangKy"
        android:text="Đăng ký"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:layout_width="340dp"
        android:layout_height="42dp"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff"
        android:background="@drawable/dangnhap_dangky"
        />
</LinearLayout>