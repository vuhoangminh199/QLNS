<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_hoten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/edit_register_name"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:digits=" ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
            android:hint="Họ tên"
            android:textSize="15dp" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/name_register_error"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:text="Sai rui"
        android:textColor="@android:color/holo_red_light"
        android:textSize="15dp"
        android:visibility="gone" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_emaildtsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_register_phone"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:hint="Số điện thoại"
            android:inputType="number"
            android:textSize="15dp" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/phone_register_error"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:text="Sai rui"
        android:textColor="@android:color/holo_red_light"
        android:textSize="15dp"
        android:visibility="gone" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_matkhausignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_register_password"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:textSize="15dp" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/pass_register_error"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:text="Sai rui"
        android:textColor="@android:color/holo_red_light"
        android:textSize="15dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btndangky"
        android:layout_width="340dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/dangnhap_dangky"
        android:text="Đăng ký"
        android:textColor="#ffffff"
        android:textSize="18dp" />
</LinearLayout>