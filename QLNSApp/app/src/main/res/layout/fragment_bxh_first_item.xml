<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:background="@drawable/firstitem_default_background">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_FI"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="3.15"
            android:src="@drawable/firstitem_placeholder_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="6.75"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_FI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:lines="1"
                android:text="Tôi như ánh dương rạng rỡ"
                android:textColor="#404040"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/art_FI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif"
                android:lines="1"
                android:text="Cổ Mạn"
                android:textColor="#595959"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/provider_FI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lines="1"
                android:text="NXB Thời Đại"
                android:textColor="#595959"
                android:textSize="18dp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/first_counter"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/first_counter"
        android:gravity="center"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="30px" />
</FrameLayout>